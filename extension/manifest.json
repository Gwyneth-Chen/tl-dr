{
    "name": "Text simplifier",
    "version": "1",
    "manifest_version": 2,
    "background": {
        "scripts": ["thirdParty/jquery-3.3.1.min.js",
                    "js/background.js"]
    },
    "content_scripts": [
        {
        "matches": [
            "http://*/*",
            "https://*/*"
            ],
        "js": ["js/content.js"]
        }
    ],
    "permissions": [
        "contextMenus",
        "tabs",
        "https://tlng-dr.herokuapp.com/*"
    ]
}